<UserControl x:Class="Calculator.View.LengthWindow.LengthWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calculator.View.LengthWindow"
             xmlns:customcontrol="clr-namespace:Calculator.CustomControl"
             mc:Ignorable="d" Name="lengthWindow" DataContext="{StaticResource lengthViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">

        </Grid>
        <customcontrol:CoreConverter Grid.Column="1"
                                     ClickNumberCommand="{Binding ClickNumberCommand}"
                                     CECommand="{Binding CECommand}"
                                     DeleteCommand="{Binding DecimalCommand}"
                                     DecimalCommand="{Binding DecimalCommand}"/>
    </Grid>
</UserControl>
