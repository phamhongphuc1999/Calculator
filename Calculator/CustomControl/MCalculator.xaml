<UserControl x:Class="Calculator.CustomControl.MCalculator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calculator.CustomControl"
             mc:Ignorable="d" Name="mCalculator"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Style="{StaticResource transparentStandardButton}"
                            Grid.Column="0" Content="MC" />
        <Button Style="{StaticResource transparentStandardButton}"
                            Grid.Column="1" Content="MR"></Button>
        <Button Style="{StaticResource transparentStandardButton}"
                            Grid.Column="2" Content="M+"></Button>
        <Button Style="{StaticResource transparentStandardButton}"
                            Grid.Column="3" Content="M-"></Button>
        <Button Style="{StaticResource transparentStandardButton}"
                            Grid.Column="4" Content="MS"></Button>
    </Grid>
</UserControl>
